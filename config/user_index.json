{
	"logging" : {
		"level" : "info",
		"path" : "logs/logs.log",
		"formatter" : "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
		"console" : false
	},
	"elasticsearch" : {
		"cluster_nodes" : ["brainstorm1:9200", "brainstorm2:9200"
        , "brainstorm3:9200", "brainstorm5:9200", "brainstorm6:9200"
        , "brainstorm7:9200", "brainstorm8:9200", "brainstorm9:9200", "brainstorma:9200"
        , "brainstormb:9200"],
		"index" : "user_index",
		"type" : "user",
		"type_mapping" : {
			"mappings" : {
				"user" : {
        			"properties" : {
            			"user_id" : {
            				"type" : "string"
            			}
        			}
   				},
   				"transaction" : {
   					"_parent" : {
			    		"type" : "user"
					},
					"properties" : {
						"z_score_delta" : { 
			                "index" : "analyzed", 
			                "type" : "float"     
			    		},
			            "transaction_id" : {
			                "index" : "analyzed", 
			                "type" : "string"     
			            },
			            "factual_id" : {
			                "index" : "analyzed",
			                "type" : "string"
			            },
			            "description" : {
			                "index" : "analyzed",
			                "type" : "string"
			            },
						"date" : { 
			                "index" : "analyzed", 
			                "type" : "date"     
			    		},
						"pin" : { 
							"properties" : {
								"location" : {
									"type" : "geo_shape", 
									"tree" : "quadtree", 
									"precision" : "1m"
								}
							}
						}
			        }    
				}
			},
			"settings" : {
				"number_of_replicas" : 1,
				"number_of_shards" : 12
			}
		}
	}
}
