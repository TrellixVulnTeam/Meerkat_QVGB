{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Input schema for meerkat.geomancer",
	"definitions": {
		"target_merchant_list": {
			"type": "array",
			"minItems" : 1,
			"items": { "type": "string" },
			"uniqueItems": true
		}
	},
	"description": "More Stuff",
	"type": "object",
	"properties": {
		"agg_data" : {
			"type": "object",
			"properties": {
				"bucket": { "type": "string"},
				"prefix": {
					"type": "string",
					"pattern": "^[A-Za-z0-9][A-Za-z0-9\/_.]*\/$"
				},
				"filename": {
					"type": "string",
					"pattern": "^.*csv$"
				},
				"savepath": {
					"type": "string",
					"pattern": "^[A-Za-z0-9\/_.]*\/$"
				}
			},
			"required": ["bucket", "prefix", "filename", "savepath"]
		},
		"merchant_dictionaries": {
			"properties": {
				"dry_run": {
					"enum": [false, true]
				},
				"target_merchant_list": {
					"type": "array",
					"minItems" : 1,
					"items": { "type": "string" },
					"uniqueItems": true
				}
			},
			"required": ["dry_run", "target_merchant_list"]
		},
		"pybossa_project": {
			"properties": {
				"bank_or_card": {
					"enum": [ "bank", "card" ]
				},
				"merchants": {
					"type": "array",
					"minItems" : 1,
					"items": { "type": "string" },
					"uniqueItems": true
				},
				"server": {
					"type": "string",
					"minLength": 1
				},
				"apikey": {
					"type": "string",
					"pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
				},
				"create_project": {
					"enum": [ false, true ]
				},
				"update_presenter": {
					"enum": [ false, true ]
				},
				"update_dictionary": {
					"enum": [ false, true ]
				},
				"add_tasks": {
					"enum": [ false, true ]
				},
				"target_merchant_list": {
					"$ref": "#/definitions/target_merchant_list"
				}
			},
			"required": ["target_merchant_list", "bank_or_card", "merchants", "server", "apikey", "create_project", "update_presenter", "update_dictionary", "add_tasks"]
		},
		"interrogate": {
			"properties" : {
				"bank_or_card": {
					"enum": ["bank", "card"]
				},
				"server" : {
					"type": "string",
					"minLength": 1
				},
				"apikey" : {
					"type": "string",
					"pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
				},
				"target_merchant_list": {
					"type": "array",
					"minItems" : 1,
					"items": { "type": "string" },
					"uniqueItems": true
				}
			},
			"required": ["bank_or_card", "server", "apikey", "target_merchant_list"]
		},
		"top_merchant_data" : {
			"properties": {
				"bank_or_card": {
					"enum": ["bank", "card"]
				},
				"version_dir": {
					"type": "string",
					"minLength": 14,
					"maxLength": 14
				},
				"bucket": {
					"type": "string"
				},
				"truncate_lines": {
					"type": "integer",
					"minimum": -1
				},
				"target_merchant_list": {
					"type": "array",
					"minItems" : 1,
					"items": { "type": "string" },
					"uniqueItems": true
				}
			},
			"required": ["bank_or_card", "version_dir", "bucket", "truncate_lines", "target_merchant_list"]
		}
	}
}
