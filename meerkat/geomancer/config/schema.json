{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Input schema for meerkat.geomancer",
	"definitions": {
		"target_merchant_list": {
			"type": "array",
			"minItems" : 1,
			"items": { "type": "string" },
			"uniqueItems": true
		},
		"bucket": { "type": "string" },
		"bank_or_card": { "enum": ["bank", "card"] },
		"server": {
			"type": "string",
			"minLength": 1
		},
		"apikey": {
			"type": "string",
			"pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
		}
	},
	"description": "More Stuff",
	"type": "object",
	"properties": {
		"common_config": {
			"type": "object",
			"properties": {
				"bucket": { "$ref": "#/definitions/bucket" },
				"bank_or_card": { "$ref": "#/definitions/bank_or_card" },
				"server": { "$ref": "#/definitions/server" },
				"apikey": { "$ref": "#/definitions/apikey" },
				"target_merchant_list": { "$ref": "#/definitions/target_merchant_list" }
			},
			"required": ["target_merchant_list", "bucket", "bank_or_card", "server", "apikey"]
		},
		"agg_data" : {
			"type": "object",
			"properties": {
				"prefix": {
					"type": "string",
					"pattern": "^[A-Za-z0-9][A-Za-z0-9\/_.]*\/$"
				},
				"filename": {
					"type": "string",
					"pattern": "^.*csv$"
				},
				"savepath": {
					"type": "string",
					"pattern": "^[A-Za-z0-9\/_.]*\/$"
				}
			},
			"required": ["prefix", "filename", "savepath"]
		},
		"merchant_dictionaries": {
			"properties": {
				"dry_run": { "enum": [false, true] }
			},
			"required": ["dry_run"]
		},
		"pybossa_project": {
			"properties": {
				"create_project": { "enum": [ false, true ] },
				"update_presenter": { "enum": [ false, true ] },
				"update_dictionary": { "enum": [ false, true ] },
				"add_tasks": { "enum": [ false, true ] }
			},
			"required": ["create_project", "update_presenter", "update_dictionary", "add_tasks"]
		},
		"interrogate": {
			"properties" : {
			}
		},
		"top_merchant_data" : {
			"properties": {
				"version_dir": {
					"type": "string",
					"pattern": "^[0-9]{14}$"
				},
				"truncate_lines": {
					"type": "integer",
					"minimum": -1
				}
			},
			"required": ["version_dir", "truncate_lines"]
		}
	}
}
